import java.io.IOException;

import org.jsoup.Jsoup;
import org.jsoup.nodes.Document;
import org.jsoup.select.Elements;

public class Jsoup_example {

	public static void main(String[] args) {
		try {
			// 1. URL 선언
			String connUrl = "https://news.naver.com/";
			
			Document doc = Jsoup.connect(connUrl).get(); // html 문서를 통째로 가져와 doc에 저장
			Elements text = doc.select("div[class=hdline_article_tit]"); // 해당 클래스를 가진 div만 선택하여 추출
			System.out.print(doc);
			System.out.print(text);
			text = text.select("a");
			System.out.print(text);
			for(int i =0; i<text.size(); i++) {
				System.out.println(text.get(i).text());
			}
			
		} catch (IOException e) {
			// Exp : Connection Fail
			e.printStackTrace();
		}

	}

}
